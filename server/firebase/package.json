{
  "name": "gut-logic-server",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "cd functions && npm run build",
    "test": "firebase emulators:exec --only firestore ava",
    "deploy": "firebase deploy --force --only functions,firebase",
    "postinstall": "cd functions && npm install"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "firebase-tools": "^10.2.2",
    "gut-logic-cloud-functions": "file:functions"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "ava": "^4.1.0",
    "eslint": "^8.11.0",
    "eslint-plugin-promise": "^6.0.0",
    "typescript": "^4.8.2"
  },
  "ava": {
    "timeout": "2m",
    "files": [
      "firestore/test/**/*.js"
    ]
  }
}